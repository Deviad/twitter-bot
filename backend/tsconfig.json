{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": false,
        "sourceMap": false,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noStrictGenericChecks": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "compileOnSave": false,
    "exclude": [
      "node_modules"
    ]
}
